#include <stdio.h>

int main(){
  int n,x;
  int i,j,k;
  int count;
  while (1){
    scanf("%d%d",&n,&x);
    if (n == 0 && x == 0) break;
    count = 0;
    for (i = 0 ; i < j ; i++)
      for (j = i + 1 ; j < k ; j++)
	for (k = j + 1 ; k <= n ; k++ )
	  if (i+j+k==x) count++;
	  }
  printf("%d",count);
  
  return 0;
}
